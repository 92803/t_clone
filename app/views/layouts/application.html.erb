<!DOCTYPE html>
<html>
  <head>
    <title>Clone</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">Coments!</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><h1>Coments!</h1>

            </a>
          </div>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if logged_in? %>
              <li><%= link_to "Profile", user_path(current_user.id) %></li>
              <li><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
              <li><%= link_to 'All Coment', coments_path %></li>
              <li><%= link_to 'New Coment', new_coment_path %></li>
              <% else %>
              <li><%= link_to "Sign up", new_user_path %></li>
              <li><%= link_to "Login", new_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <% if notice %>
      <div class = "flash">
        <%= notice %>
      </div>
    <% end %>

    <% flash.each do |key, value| %>
      <div class="flash">
        <%= content_tag(:div, value, class: "#{key}") %>
      </div>
    <% end %>

    <%= yield %>

    <footer>
      <p>*+:｡.｡create_by_remixk13｡.｡:+*</p>
      <p>It becomes portfolio. Thank you for viewing！</p>
    </footer>

  </body>
</html>
